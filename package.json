{
    "name": "advpl-sintax-poupex",
    "displayName": "ADVPL Análise, Snippets e GIT",
    "description": "Extensão de análise de qualidade e sintaxe e snippets ADVPL e que facilita a utilização do GIT.",
    "version": "0.4.5",
    "publisher": "robsonrosilva",
    "icon": "images/icone.png",
    "engines": {
        "vscode": "^1.9.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/robsonrosilva/advpl-sintax.git"
    },
    "bugs": {
        "url": "https://github.com/robsonrosilva/advpl-sintax/issues"
    },
    "galleryBanner": {
        "color": "#1E81C1",
        "theme": "light"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "advpl-sintax.gitValidacao",
                "title": "POUPEX - Envia os commits para a branche VALIDAÇÃO!"
            },
            {
                "command": "advpl-sintax.gitRelease",
                "title": "POUPEX - Envia os commits para a branche RELEASE!"
            },
            {
                "command": "advpl-sintax.gitMaster",
                "title": "POUPEX - Envia os commits para a branche MASTER!"
            },
            {
                "command": "advpl-sintax.validaProjeto",
                "title": "POUPEX - Valida Projeto!"
            },
            {
                "command": "advpl-sintax.analisaTags",
                "title": "POUPEX - Análise de TAGS!"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Configuração de Advpl Sintax",
            "properties": {
                "advpl-sintax": {
                    "type": "object",
                    "default": {},
                    "description": "Configurações de extensão Advpl Sintax.",
                    "properties": {
                        "branchTeste": {
                            "type": "string",
                            "default": "V11_Validacao",
                            "description": "Nome da branche do GIT do ambiente de Testes."
                        },
                        "branchHomologacao": {
                            "type": "string",
                            "default": "V11_Release",
                            "description": "Nome da branche do GIT do ambiente de Homologação."
                        },
                        "branchProducao": {
                            "type": "string",
                            "default": "master",
                            "description": "Nome da branche do GIT do ambiente de Produção"
                        },
                        "ownerDb": {
                            "type": "array",
                            "default": [],
                            "description": "Lista dos Owner's ou Bancos de dados que o Protheus usa.",
                            "items": {
                                "type": "string",
                                "default": "PROTHEUS",
                                "description": "Nome do banco de dados ou owner."
                            }
                        },
                        "empresas": {
                            "type": "array",
                            "default": [],
                            "description": "Lista com os códigos de empresas que o Protheus usa.",
                            "items": {
                                "type": "string",
                                "default": "01",
                                "description": "Códigos das empresas do Protheus para validação de queryes."
                            }
                        },
                        "comentFontPad": {
                            "type": "array",
                            "default": [],
                            "description": "Lista com as linhas de comentário de fonte.",
                            "items": {
                                "type": "string",
                                "default": "",
                                "description": "Linha do comentário de fonte. (Usar padrão de search TypeScript)"
                            }
                        }
                    }
                }
            }
        },
        "snippets": [
            {
                "language": "advpl",
                "path": "./snippets/advpl.mvc.json"
            },
            {
                "language": "advpl",
                "path": "./snippets/advpl.treport.json"
            },
            {
                "language": "advpl",
                "path": "./snippets/advpl.webservices.json"
            },
            {
                "language": "advpl",
                "path": "./snippets/advpl.webservicesrest.json"
            },
            {
                "language": "advpl",
                "path": "./snippets/advpl.comentarios.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "git": "^0.1.5",
        "regex": "^0.1.1",
        "spawn-command": "0.0.2-1",
        "zlibjs": "^0.3.1"
    }
}
